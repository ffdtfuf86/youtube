{
  "manifest_version": 3,
  "name": "SecureYT - YouTube Channel Blocker",
  "version": "1.0.1",
  "description": "Advanced YouTube content filtering with multi-layer authentication system",
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "notifications",
    "webNavigation",
    "tabs",
    "management",
    "browsingData"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "chrome://extensions/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["chrome://extensions/*"],
      "js": ["extension-protection.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureYT Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["security-modal.html", "styles.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "incognito": "spanning"
}