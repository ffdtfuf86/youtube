{
  "manifest_version": 3,
  "name": "SecureYT - YouTube Channel Blocker",
  "version": "1.0",
  "description": "Secure YouTube content filtering with multi-layer authentication",
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "notifications"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureYT Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["security-modal.html", "styles.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}